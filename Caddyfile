{$DOMAIN} {
    # Backend API routes
    handle_path /api/* {
        reverse_proxy backend:8080
    }

    handle_path /health {
        reverse_proxy backend:8080
    }

    handle_path /swagger/* {
        reverse_proxy backend:8080
    }

    # Frontend - everything else
    handle {
        reverse_proxy frontend:80
    }
}
